{
  "manifest_version": 3,
  "name": "Echo360 Captions",
  "version": "1.0",
  "description": "Adds synchronized captions to Echo360 video lectures.",
  "content_scripts": [
    {
      "matches": [
        "https://echo360.org/lesson/*",
        "https://echo360.org/section/*/classroom*"
      ],
      "js": ["injected.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://echo360.org/lesson/*",
        "https://echo360.org/section/*/classroom*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
